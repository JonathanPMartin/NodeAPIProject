
<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Home Page</title>
		<meta name="description" content="form to add new books">
		<meta name="author" content="Mark Tyers">
		<link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
		<script type="module" src="main.js"></script>
	</head>
	<body>
		<header>
		<a href="/logout">Log out</a>
		<h1>Homepage</h1>
		
		</header>
		{{#if msg}}
 			<aside>
				<p class="msg">{{msg}}</p>
			</aside>
		{{/if}}
		<main>
      <p>Here are the files you have uploaded:</p>
      
      <table>
        <tr><th>Name</th><th>FileType</th></tr>
        {{#each records}}
          <tr>
						<!--calls the details page passing along the row value-->
            <td><a href="/details?userid={{userid}}+&row={{this.id}}">{{this.uploadname}}</a></td>
						<!--displays file type of file -->
            <td>{{this.filetype}}</td>
          </tr>
        {{/each}}
      </table>
			<!--calls the upload page with the user id, as homepage expects it when called from upload -->
      <p><a href="/upload?userid={{userid}}">Upload new File:</a></p>
		</main>
	</body>
</html>
